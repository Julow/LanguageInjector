{
	// Add tmLanguage patterns
	"patterns": {

		// Simple rule "regexp": "scope"
		"[ \t]+$": "invalid.trailing",

		// Using captures
		"^ +(\t+)|^\t+( +)": {
			// Scope for capture 1
			"1": "invalid.indentation.tab-in-space",
			// Scope for capture 2
			"2": "invalid.indentation.space-in-tab"
			// Order or holes do not matter
		},

		"\\{\\{[^\\}]+\\}\\}": {
			// Only for html
			"parent": ["text.html"],

			// Without using capture
			"scope": "string.regexp.template"
		}
	}
}
